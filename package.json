        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "date-fns": "^4.1.0",
        "lucide-react": "^0.525.0",
        "next": "15.3.4",
        "pg": "^8.16.3",
        "prisma": "^6.11.1",
        "react": "^19.0.0",
        "react-day-picker": "^9.7.0",
        "react-dom": "^19.0.0",
        "react-hook-form": "^7.59.0",
